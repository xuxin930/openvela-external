config LIB_CURL
	bool "Enable libcurl"
	select LIBC_LOCALTIME
	select LIBC_SCANSET
	default n
	---help---
		libcurl

if LIB_CURL

config LIB_CURL_CA_PATH
	string "Curl Certificate Authorize PATH"
	default "/etc/ssl/curl"

config LIB_CURL_PTHREAD_STACKSIZE
	int "libcurl pthread stack size"
	default 6144
	---help---
		Stack size to use libcurl thread.

endif

config TOOLS_CURL
	tristate "Enable curl command line"
	select LIB_CURL
	default n
	---help---
		curl

if TOOLS_CURL

config TOOLS_CURL_PROGNAME
	string "Program name"
	default "curl"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config TOOLS_CURL_PRIORITY
	int "curl task priority"
	default 100

config TOOLS_CURL_STACKSIZE
	int "curl stack size"
	default 8192

endif
